<h3 class="page-title"> <b>Payment Types</b>
</h3>

<table class="table table-hover table-bordered table-striped">
    <thead>
        <tr>
            <th> Name </th>
            <th> Fee? </th>
            <th> Fee Amount </th>
            <th> Carrier </th>
            <% if current_user.superuser? %>
            <th> Actions </th>
            <% end %>
        </tr>
    </thead>
    <tbody>
      <% @payment_types.each do |pt| %>
        <tr>
            <td> <%= pt.name %> </td>
            <td> <%= "Yes" if pt.fee %> <%= "No" unless pt.fee %> </td>
            <td> <%= number_to_currency(pt.fee_amount) %> </td>
            <td> <%= pt.carrier.name if pt.carrier %> </td>
            <% if current_user.superuser? %>
            <td>
                <div class="btn-group">
                    <%= link_to "Edit", edit_payment_type_path(pt), class: "btn btn-default" %>
                    <% if policy(:payment_type).destroy? %>
                    <%= link_to 'Delete', payment_type_path(pt), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
                    <% end %>
                </div>
            </td>
            <% end %>
        </tr>
        <% end %>
    </tbody>
</table>