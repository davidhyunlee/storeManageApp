<% if payment.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(payment.errors.count, "error") %> prohibited this payment from being saved:</h2>

    <ul>
    <% payment.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<div class="portlet form light bordered">
  <%= form_for payment, :html => {:class => 'form-horizontal form-bordered form-row-stripped'} do |f| %>
    <div class="form-body">
        <div class="form-group">
            <%= f.label :store_id, "Store", class: "control-label col-md-3" %>
            <div class="col-md-9">
                <%= f.collection_select :store_id, Store.all, :id, :alias, {prompt: false}, {class: "form-control"} %>
            </div>
        </div>
        <div class="form-group">
            <%= f.label :carrier_id, "Carrier", class: "control-label col-md-3" %>
            <div class="col-md-9">
                <%= f.collection_select :carrier_id, Carrier.all, :id, :name, {prompt: false}, {class: "form-control"} %>
            </div>
        </div>
        <div class="form-group">
            <%= f.label :payment_type_id, "Payment Type", class: "control-label col-md-3" %>
            <div class="col-md-9">
                <%= f.collection_select :payment_type_id, PaymentType.all, :id, :name, {prompt: false}, {class: "form-control"} %>
            </div>
        </div>
        <div class="form-group">
            <%= f.label :number_id, "Mobile Number", class: "control-label col-md-3" %>
            <div class="col-md-9">
                <%= f.collection_select :number_id, payment.customer.numbers.all, :id, :number, {prompt: false}, {class: "form-control"} %>
            </div>
        </div>
        <div class="form-group">
            <%= f.label :amount, "Payment Amount", class: "control-label col-md-3" %>
            <div class="col-md-9">
                <%= f.text_field :amount, class: "form-control" %>
            </div>
        </div>

        <div class="form-actions actions">
            <div class="row">
                <div class="col-md-offset-3 col-md-9">
                    <%= f.submit "Submit", class: "btn green" %>
                    <%= f.submit "Reset", type: "reset", class: "btn default" %>
                </div>
            </div>
        </div>
    </div>
  <% end %>
</div>
