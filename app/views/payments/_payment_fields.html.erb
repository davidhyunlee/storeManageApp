<%= form_for Payment.new, :html => {class: 'form-horizontal', role: 'form'} do |f| %>
	<%= f.hidden_field :customer_id, value: @customer.id %>
	<%= f.hidden_field :number_id, value: @number.id %>
    <div class="form-body">
		<div class="form-group">
				<label class="col-md-2 control-label">Number</label>
		    <div class="col-md-10">
		      <%= text_field_tag '', number_to_phone(@number.number, area_code: true), disabled: true, class: 'form-control' %>
		    </div>
		</div>
		<div class="form-group">
		    <%= f.label :carrier_id, "Carrier", class: "col-md-2 control-label" %>
		    <div class="col-md-10">
		      <%= text_field_tag '', @number.carrier.name, disabled: true, class: 'form-control' %>
					<%= f.hidden_field :carrier_id, value: @number.carrier.id %>
		    </div>
		</div>
		<div class="form-group">
		    <%= f.label :payment_type_id, "Payment Type", class: "col-md-2 control-label" %>
		    <div class="col-md-10">
					<%= f.collection_select :payment_type_id, @payment_types.all, :id, :name, {prompt: "Select Payment Type"}, {class: "form-control"} %>
		    </div>
		</div>
		<div class="form-group">
		    <%= f.label :amount, "Payment Amount", class: "col-md-2 control-label" %>
		    <div class="col-md-10">
					<%= f.text_field :amount, {class: "form-control"} %>
		    </div>
		</div>

    <div class="form-actions">
        <div class="row">
            <div class="col-md-offset-2 col-md-10">
            	<%= f.submit "Post Payment", class: "btn green" %>
            </div>
        </div>
    </div>
<% end %>


