<tr>
    <td> PAYMENT </td>
    <td> <%= @payment_type.name  %><br /></td>
    <td> 1 </td>
    <td> <%= number_to_currency(@amount) %> </td>
    <td> </td>
    <td> </td>
</tr>

<% child_index = Time.now.to_i %>
<input type="hidden" name="invoice[payments_attributes][<%= child_index %>][amount]" value="<%= @amount %>" />
<input type="hidden" name="invoice[payments_attributes][<%= child_index %>][store_id]" value="<%= current_store.id %>" />
<input type="hidden" name="invoice[payments_attributes][<%= child_index %>][customer_id]" value="<%= @customer.id %>" />
<input type="hidden" name="invoice[payments_attributes][<%= child_index %>][carrier_id]" value="<%= @carrier.id %>" />
<input type="hidden" name="invoice[payments_attributes][<%= child_index %>][payment_type_id]" value="<%= @payment_type.id %>" />
<input type="hidden" name="invoice[payments_attributes][<%= child_index %>][user_id]" value="<%= current_user.id %>" />
<input type="hidden" name="invoice[payments_attributes][<%= child_index %>][invoiced]" value="true" />