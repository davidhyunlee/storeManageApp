<h3 class="page-title"> Invoices for <%= current_store.alias if current_store %>
  <small></small>
</h3>

<div class="portlet box bordered light">
    <table class="table table-condensed table-hover">
        <thead>
            <tr>
                <th> Invoice # </th>
                <th> Customer </th>
                <th> Created By </th>
                <th> Date & Time </th>
                <th> Total Sale </th>
                <th> Total Taxes </th>
                <th> Total w/ Taxes </th>
            </tr>
        </thead>
        <tbody>
          <% current_store.invoices.each do |invoice| %>
            <tr>
              <td><%= invoice.id %></td>
              <td><%= invoice.customer.first_name %></td>
              <td><%= invoice.user.first_name %></td>
              <td><%= invoice.created_at.strftime("%D %r") %></td>
              <td><%= invoice.subtotal %></td>
              <td><%= invoice.sales_tax %></td>
              <td><%= invoice.total %></td>
            </tr>
          <% end %>
        </tbody>
    </table>
</div>







<table>
  <thead>
    <tr>
      <th>Customer</th>
      <th>User</th>
      <th>Store</th>
      <th>Total</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% current_store.invoices.each do |invoice| %>
      <tr>
        <td><%= invoice.customer.first_name %></td>
        <td><%= invoice.user.first_name %></td>
        <td><%= invoice.store %></td>
        <td><%= invoice.total %></td>
        <td><%= link_to 'Show', invoice %></td>
        <td><%= link_to 'Edit', edit_invoice_path(invoice) %></td>
        <td><%= link_to 'Destroy', invoice, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
