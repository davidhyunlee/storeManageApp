<h3 class="page-title"><b>Editting Serialized Item</b></h3>

<div class="portlet light bordered">
	<%= form_for @serialized_item do |f| %>
	<div class="form-group">
		<%= f.label :sellable_id, "Product" %>
		<%= f.text_field :sellable_id, value: "#{@serialized_item.sellable.description}", class: "form-control", disabled: true %>
	</div>
	<div class="form-group">
		<%= f.label :store_id, "Store" %>
		<%= f.collection_select :store_id, Store.all, :id, :alias, {prompt: false}, {class: "form-control"} %>
	</div>
	<div class="form-group">
		<%= f.label :serial_number, "Serial Number" %>
		<%= f.text_field :serial_number, class: "form-control" %>
	</div>
	<div class="form-group">
		<%= f.label :cost, "Cost of Item" %>
		<%= f.text_field :cost, class: "form-control" %>
	</div>
	<div class="form-group">
		<%= f.label :locked, "Item Locked for Scanning?" %>
		<%= f.check_box :locked, class: "form-control" %>
	</div>
	<div class="action-buttons">
		<%= f.submit "Update Item", class: "btn green" %>
	</div>
	<% end %>
</div>