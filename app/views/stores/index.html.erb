<h3 class="page-title sbold">Store List</h3>

<div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th> Store Name </th>
                <th> Alias </th>
                <th style="width: 120px;"> Actions </th>
            </tr>
        </thead>
        <tbody>
          <% @stores.each do |store| %>
            <tr>
                <td><%= store.name %></td>
                <td><%= store.alias %></td>
                <td>
                    <% if current_user.superuser? %>
                    <div class="btn-group btn-group-sm btn-group-solid">
                        <%#= link_to content_tag(:i, nil, class: "fa fa-file-o"), store, class: "btn green tooltips", title: "Show #{store.name}" %>
                        <%= link_to content_tag(:i, nil, class: "fa fa-edit"), edit_store_path(store), class: "btn btn-sm blue", title: "Edit #{store.name}" %>
                        <%= link_to content_tag(:i, nil, class: "fa fa-times"), store, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-sm red" %>
                    </div>
                    <% end %>
                </td>
            </tr>
          <% end %>
        </tbody>
    </table>
</div>

<%= paginate @stores %>