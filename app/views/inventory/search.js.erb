<% if @sellable.nil? %>
	<% if @sku == "" %>
		$(".add-area").empty().append("<b>You must enter a SKU.</b>")
	<% else %>
		$(".add-area").empty().append("Product with SKU of <b><%= @sku %></b> does not exist in the product database.")
	<% end %>
<% elsif @sellable.serialized? %>
	$(".sku-search").val("");
	$(".add-area").empty().append("<%= j render partial: 'invoices/add_serialized_check_pricing' %>");
<% else %>
	$(".sku-search").val("");
	$(".add-area").empty().append("<%= j render partial: 'invoices/add_simple_item' %>");
<% end %>



