<h3 class="page-title"><b>Simple Item Inventory</b> for <b><%= current_store.alias %></b></h3>

<table class="table table-condensed table-bordered table-hover">
    <thead>
        <tr>
            <th> SKU </th>
            <th> Description </th>
            <th> Quantity </th>
            <th> Price </th>
            <% if current_user.superuser? %>
            <th> Actions </th>
            <% end %>
        </tr>
    </thead>
    <tbody>
      <% @inventory.each do |item| %>
        <tr>
            <td> <%= item.sellable.sku %> </td>
            <td> <%= item.sellable.description %> </td>
            <td> <%= item.quantity %> </td>
            <td> <%= number_to_currency(item.sellable.retail_price) %> </td>
            <% if current_user.superuser? %>
            <td> </td>
            <% end %>
        </tr>
      <% end %>
    </tbody>
</table>


<%= paginate @inventory %>