<h3 class="page-title sbold">Tenants</h3>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Goal</th>
        <th>Date Applied</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Current Employment</th>
        <th>Employment Contact</th>
        <th>Paycheck Amount</th>
        <th>SSN</th>
        <th>Phone Number</th>
        <th>E-mail</th>
        <th>Type</th>
        <th>Bed</th>
        <th>Bath</th>
        <th>Laundry</th>
        <th>Sq Ft</th>
        <th>Rent Budget</th>
        <th>Area</th>
        <th>Move-in date</th>
        <th>Note</th>
        <th>Family Count</th>
        <th>Tenant Names</th>
        <th>Pets</th>
        <th>Current Lease</th>
        <th>Current Address</th>
        <th>Reference Name</th>
        <th>Reference Contact</th>
        <th>Introduced</th>
        <th>Option Address1</th>
        <th>Option Address2</th>
        <th>Option Address3</th>
        <th>Option Address4</th>
        <th>Option Address5</th>
        <th>Option Address6</th>
        <th style="width: 120px;"> Actions </th>
      </tr>
    </thead>

    <tbody>
      <% @tenants.each do |tenant| %>
        <tr>
          <td><%= tenant.goal %></td>
          <td><%= tenant.date_applied %></td>
          <td><%= tenant.first_name %></td>
          <td><%= tenant.last_name %></td>
          <td><%= tenant.employment %></td>
          <td><%= tenant.employment_contact %></td>
          <td><%= tenant.paycheck_amount %></td>
          <td><%= tenant.ssn %></td>
          <td><%= tenant.phone_number %></td>
          <td><%= tenant.email %></td>
          <td><%= tenant.property_type %></td>
          <td><%= tenant.bed %></td>
          <td><%= tenant.bath %></td>
          <td><%= tenant.laundry %></td>
          <td><%= tenant.sqft %></td>
          <td><%= tenant.rent_budget %></td>
          <td><%= tenant.area %></td>
          <td><%= tenant.move_in_date %></td>
          <td><%= tenant.note %></td>
          <td><%= tenant.family_count %></td>
          <td><%= tenant.tenant_names %></td>
          <td><%= tenant.pets %></td>
          <td><%= tenant.current_lease %></td>
          <td><%= tenant.current_address %></td>
          <td><%= tenant.reference_name %></td>
          <td><%= tenant.reference_contact %></td>
          <td><%= tenant.introduced %></td>
          <td><%= tenant.option_address1 %></td>
          <td><%= tenant.option_address2 %></td>
          <td><%= tenant.option_address3 %></td>
          <td><%= tenant.option_address4 %></td>
          <td><%= tenant.option_address5 %></td>
          <td><%= tenant.option_address6 %></td>
          <td>
              <div class="btn-group btn-group-sm btn-group-solid">
                  <%= link_to content_tag(:i, nil, class: "fa fa-file-o"), tenant, class: "btn btn-sm green tooltips", title: "Show" %>
                  <%= link_to content_tag(:i, nil, class: "fa fa-edit"), edit_tenant_path(tenant), class: "btn btn-sm blue", title: "Edit" %>
                  <% if current_user.superuser? %>
                  <%= link_to content_tag(:i, nil, class: "fa fa-times"), tenant, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-sm red" %>
                  <% end %>
              </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= paginate @tenants %>