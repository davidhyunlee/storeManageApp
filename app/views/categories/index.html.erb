<h3 class="page-title sbold">Category List</h3>

<div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th> Category Name </th>
                <th> Description </th>
                <th style="width: 120px;"> Actions </th>
            </tr>
        </thead>
        <tbody>
          <% @categories.each do |category| %>
            <tr>
                <td><%= category.name %></td>
                <td><%= category.description %></td>
                <td>
                    <% if current_user.superuser? %>
                    <div class="btn-group btn-group-sm btn-group-solid">
                        <%#= link_to content_tag(:i, nil, class: "fa fa-file-o"), category, class: "btn green tooltips", title: "Show #{category.name}" %>
                        <%= link_to content_tag(:i, nil, class: "fa fa-edit"), edit_category_path(category), class: "btn blue", title: "Edit #{category.name}" %>
                        <%= link_to content_tag(:i, nil, class: "fa fa-times"), category, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn red" %>
                    </div>
                    <% end %>
                </td>
            </tr>
          <% end %>
        </tbody>
    </table>
</div>

<%= paginate @categories %>