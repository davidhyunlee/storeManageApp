<h3 class="page-title sbold">Closing Reports</h3>

<table class="table table-condensed table-bordered table-hover"> 
  <thead>
    <tr>
      <th>Date</th>
      <th>Cash Total</th>
      <th>Card Total</th>
      <th>Total</th>
      <th>Created By</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @drawer_counts.each do |drawer_count| %>
      <tr>
        <td><%= link_to drawer_count.created_at.in_time_zone(Setting.time_zone).strftime("%B %e, %Y @ %I:%M %p"), drawer_count %></td>
        <td><%= number_to_currency(drawer_count.cash_total) %></td>
        <td><%= number_to_currency(drawer_count.card_total) %></td>
        <td><%= number_to_currency(drawer_count.total) %></td>
        <td><%= drawer_count.user.full_name %></td>
        <td><%= link_to 'Show', drawer_count %></td>
        <td><%= link_to 'Delete', drawer_count, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>